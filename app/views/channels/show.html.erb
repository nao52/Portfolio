<% content_for(:title, @channel.name) %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">

    <div class="channel-detail">
      <div class="col-md-5">
        <%= image_tag @channel.thumbnail_url, class: "img-circle", size: '300x300' if @channel.thumbnail_url %>
      </div>
      <div class="col-md-7">
        <div class="mt-30">
          <h1 id="channel-name-<%= @channel.id %>"><%= @channel.name %></h1>
          <p>ジャンル</p>
          <p>恋愛/漫画</p>
          <p>チャンネル登録者数</p>
          <p><%= "#{number_with_delimiter(@channel.subscriber_count, delimiter: ',')}人" %></p>
          <p>登録しているユーザー数</p>
          <p><%= "#{number_with_delimiter(@channel.users.size, delimiter: ',')}人" %></p>
        </div>
      </div>
    </div>

    <div class="channel-description">
      <h2>チャンネル概要説明</h2>
      <p><%= @channel.description %></p>
    </div>

    <div class="channel-link">
      <ul class="nav nav-tabs nav-justified">
        <li role="presentation" class="active" %><%= link_to "コメント一覧", '#' %></a></li>
        <li role="presentation" %><%= link_to "高評価された動画", '#' %></li>
        <li role="presentation" %><%= link_to "ユーザー一覧", '#' %></li>
      </ul>
    </div>

    <div class="channel-contents">
      <%= render 'channel_comments/channel_comments' %>
    </div>
  </div>
</div>
