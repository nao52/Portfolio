<%= form_with model: current_user.content_favorites.build, class: "favorite-form" do |f| %>
  <div><%= hidden_field_tag :content_id, content.id %></div>
  <%= button_tag type: 'submit', class: "btn btn-clear" do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
    <span class="favorite-count"><%= content.decorate.likes_count %></span>
  <% end %>
<% end %>
