<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @content_form, url: url, method: method do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group mt-30">
        <%= f.label :video_url, class: "form-label" %>
        <%= f.text_field :video_url, class: "form-control", placeholder: "視聴した動画のURLを記載してください" %>
      </div>

      <div class="form-group">
        <%= f.label :rating, class: "form-label" %>
        <%= f.select :rating, (1..5).to_a, { include_blank: "1〜5を選択してください" }, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :feedback, class: "form-label" %>
        <%= f.text_area :feedback, size: "40x10", class: "form-control", placeholder: "動画の感想を入力してください" %>
      </div>

      <%= f.submit "投稿する", class: "btn btn-primary btn-block mt-30" %>
    <% end %>
  </div>
</div>