<% content_for(:title, t(".title")) %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 login-form">
    <div class="site-image">
      <%= image_tag "site-image" %>
    </div>

    <p class="text-center">ユーザーチューブにログイン</p>

    <%= render 'shared/google_login_btn' %>

    <div class="horizontal-line">
      <div class="line"></div>
      <div class="or">OR</div>
      <div class="line"></div>
    </div>

    <%= form_with url: login_path do |f| %>

    <%= f.submit "ゲストとしてログイン", class: "btn btn-default btn-block login-btn" %>

    <% end %>
  </div>
</div>
