<div class="user-card">
  <div class="user-info">
    <%= link_to channels_user_path(user) do %>
      <%= image_tag(user.avatar_url, class: "img-circle", size: '50x50') %>
      <span id="user-name-<%= user.id %>" class="user-name"><%= user.name %></span>
    <% end %>
  </div>
  <div class="follow-btn">
    <%= render 'users/follow_btn', user: user unless current_user?(user) %>
  </div>
  <div class="profile">
    <pre><%= user.profile if user.profile %></pre>
    <p><%= user.decorate.age_and_gereration %></p>
    <p>好きなジャンル</p>
    <p><%= user.decorate.interesting_category %></p>
  </div>
  <%= render 'users/favorite_channels', user: user if user.best_channels.present? %>
</div>

<hr>