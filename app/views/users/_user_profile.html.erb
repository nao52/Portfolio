<div class="col-md-10 col-md-offset-1 user-profile">
  <div class="col-md-3 text-center">
    <%= image_tag(@user.avatar_url, class: "img-circle", size: '250x250') %>
  </div>
  <div class="col-md-9 user-status">
    <h1><%= @user.name %></h1>
    <h2><%= "年齢：#{@user.age} / 性別：#{@user.gender_i18n}" %></h2>
    <h2>興味のあるジャンル</h2>
    <h2>美容 / ミュージック / 料理</h2>
  </div>
  <h3>
    <pre>
      <%= @user.profile %>
    </pre>
  </h3>
  <div class="col-md-6">
    <h3 class="text-center">好きなチャンネルBest3</h3>
    <ol>
      <%= render partial: 'channels/best_channels', collection: @best_channels, as: 'channel' %>
    </ol>
  </div>
  <div class="col-md-6">
    <h3 class="text-center">好きな動画Best3</h3>
    <ol>
      <%= render partial: 'videos/best_videos', collection: @best_videos, as: 'video' %>
    </ol>
  </div>
</div>