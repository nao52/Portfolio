<% content_for(:title, t(".title")) %>
<h1 class="text-center"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", readonly: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", readonly: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.text_field :password, class: "form-control", readonly: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.text_field :password_confirmation, class: "form-control", readonly: true %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :age, id: "user_age_hidden" %>
        <%= f.label :age, class: "form-label" %>
        <%= f.select :age, (14..100).to_a, { include_blank: "選択しない" }, { disabled: true, class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :gender, id: "user_gender_hidden" %>
        <%= f.label :gender, class: "form-label" %>
        <%= f.select :gender, options_for_select(User.genders_i18n.invert, selected: @user.gender), {}, { disabled: true, class: "form-control" } %>
      </div>

      <h3 class="text-center">上記の内容で登録します。よろしいですか？</h3>
      <%= f.submit "入力画面に戻る", class: "btn btn-default btn-block" %>
      <%= f.submit "登録する", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>