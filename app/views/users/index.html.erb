<% content_for(:title, t(".title")) %>
<h1 class="text-center"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="search-users">
      <p>ユーザーの絞り込み</p>

      <div class="row user-search-form">
        <%= form_with model: @search_users_form, scope: :q, url: users_path, method: :get do |f| %>
          <div class="col-md-4 col-md-offset-1 form-group">
            <%= f.label :name, "ユーザー名" %>
            <%= f.search_field :name, class: "form-control" %>
          </div>

          <div class="col-md-4 col-md-offset-2 form-group">
            <%= f.label :age, "年齢" %>
            <%= f.select :age, (14..100).to_a, { include_blank: "年齢(14〜100で選択できます)" }, class: "form-control" %>
          </div>

          <div class="col-md-4 col-md-offset-1 form-group">
            <%= f.label :category, "興味のあるジャンル" %>
            <%= f.select :category, Category.titles_i18n.invert.to_a, { include_blank: "興味のあるジャンル" }, class: "form-control" %>
          </div>

          <div class="col-md-4 col-md-offset-2 form-group">
            <%= f.label :channel_id, "登録チャンネル" %>
            <%= f.select :channel_id, Channel.with_users.pluck(:name, :id), { include_blank: "登録チャンネル" }, class: "form-control" %>
          </div>

          <div class="col-md-6 col-md-offset-3">
            <div class="row">
              <div class="col-md-5"><button type="button" id="clear-btn" class="btn btn-defalult btn-block">クリア</button></div>
              <div class="col-md-5"><%= f.submit "検索", class: "btn btn-primary btn-block" %></div>
            </div>
          </div>
        <% end %>
      </div>

    </div>

    <% if @users.size > 0 %>
      <span class="text-center"><%= paginate @users, theme: 'bootstrap-5' %></span>
      <%= render @users %>
      <span class="text-center"><%= paginate @users, theme: 'bootstrap-5' %></span>
    <% else %>
      <p class="not-found">検索結果が存在しません</p>
    <% end %>
  </div>
</div>